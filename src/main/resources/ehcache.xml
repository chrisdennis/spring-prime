<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.ehcache.org/v3'
    xmlns:jsr107='http://www.ehcache.org/v3/jsr107'>

  <service>
    <jsr107:defaults>
      <jsr107:cache name="is-prime" template="heap-cache"/>
      <jsr107:cache name="nth-prime" template="heap-cache"/>
    </jsr107:defaults>
  </service>

  <cache-template name="heap-cache">
    <eviction-prioritizer>org.terracotta.ehcache.LowLongKeysFirst</eviction-prioritizer>
    <integration>
      <listener>
        <class>org.terracotta.ehcache.EvictionLogger</class>
        <eventFiringMode>ASYNCHRONOUS</eventFiringMode>
        <eventOrderingMode>UNORDERED</eventOrderingMode>
        <eventsToFireOn>EVICTED</eventsToFireOn>
      </listener>
    </integration>
    <resources>
      <heap size="2000" unit="entries"/>
      <offheap size="100" unit="mb"/>
    </resources>
  </cache-template>
</config>
